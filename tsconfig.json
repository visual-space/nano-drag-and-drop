{
    "compileOnSave": false,
    "compilerOptions": {
        "module": "commonjs",
        "preserveConstEnums": true,
        "removeComments": true,
        "lib": [
            "dom",
            "es2017"
        ],
        "target": "ES6",
        "noImplicitAny": true,
        "outDir": "./lib/",
        "sourceMap": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "declaration": true,
        "declarationDir": "./src/"
    },
    "exclude": [
        "node_modules",
        "lib"
    ]
}